<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="salon.dao.MessageDao">
	
	<!-- 본문  -->
	<!-- 본문  전체 리스트 -->
	<select id="selectList" resultType="message" parameterType="message">
	select *
      from salon_message
     where (sender = #{sender} and receiver = #{receiver}) or (sender = #{receiver} and receiver = #{sender})
     order by no;
	</select>
	
	<!-- 본문 작성 후 한개 보여주기 -->
	<select id="selectByNo" resultType="message" parameterType="message">
	select *
      from salon_message
	 where no = #{no}
	</select>
	
	<!-- 본문 작성  -->
	<insert id="insert" parameterType="message">
		insert into salon_message(sender, receiver, content) 
		values (#{sender},#{receiver}, #{content})
		<selectKey keyProperty="no" resultType="Integer" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<!-- 본문 삭제  -->
	<delete id="delete" parameterType="message">
		delete FROM salon_message
		where no = #{no}
	</delete>
</mapper>